<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <include layout="@layout/title_for_sub_activity"/>
                  
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        
        <TextView android:id="@+id/act_music_radio_1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>  
    
        <View android:layout_width="1dp"
              android:layout_height="40dp"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:background="@color/my_white" 
              android:layout_centerHorizontal="true"/>
    
        <TextView android:id="@+id/act_music_radio_2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>
        
    </LinearLayout>

    <include layout="@layout/separator_horizontal_gray"/>
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        
        <TextView android:id="@+id/act_music_radio_3"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>  
    
        <View android:layout_width="1dp"
              android:layout_height="40dp"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:background="@color/my_white" 
              android:layout_centerHorizontal="true"/>
    
        <TextView android:id="@+id/act_music_radio_4"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>
        
    </LinearLayout>
    
    <include layout="@layout/separator_horizontal_gray"/>       
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        
        <TextView android:id="@+id/act_music_radio_5"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>  
    
        <View android:layout_width="1dp"
              android:layout_height="40dp"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:background="@color/my_white" 
              android:layout_centerHorizontal="true"/>
    
        <TextView android:id="@+id/act_music_radio_6"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:background="@drawable/list_selector_holo_dark"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:visibility="invisible"/>
        
    </LinearLayout>
    
    <include layout="@layout/separator_horizontal_gray"/>
    
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
        <!--occupy the rest of the room, so that it can push the button group to the bottom of window-->
        
        <ImageView android:id="@+id/act_music_song_art"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:orientation="vertical"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="45dp"
                   android:src="@drawable/music">
        </ImageView>
        
    </RelativeLayout>
    
    <TextView android:id="@+id/act_music_song_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginBottom="5dp"
              android:textSize="14sp"/>
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="25dp">
        
        <View android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_weight="1"/>
        
        <ImageView android:id="@+id/act_music_local_file"
                   android:layout_width="36dp" 
                   android:layout_height="36dp"
                   android:src="@drawable/ic_local"
                   android:layout_weight="1"
                   android:clickable="true"
                   android:focusable="true"
                   android:background="@drawable/list_selector_holo_dark"/>
        
        <ImageView android:id="@+id/act_music_play"
                   android:layout_width="36dp" 
                   android:layout_height="36dp"
                   android:layout_weight="1"
                   android:clickable="true"
                   android:focusable="true"
                   android:background="@drawable/list_selector_holo_dark"/>
                
        <ImageView android:id="@+id/act_music_next"
                   android:layout_width="36dp" 
                   android:layout_height="36dp"
                   android:src="@drawable/ic_music_next"
                   android:layout_weight="1"
                   android:clickable="true"
                   android:focusable="true"
                   android:background="@drawable/list_selector_holo_dark"/>
        
        <View android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_weight="1"/>
        
    </LinearLayout>      
    
</LinearLayout>
