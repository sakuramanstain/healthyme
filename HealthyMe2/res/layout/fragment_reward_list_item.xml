<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        
    <TextView android:id="@+id/reward_list_item_index"
              android:text="1"
              android:layout_width="30dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:gravity="right"/>
        
    <RelativeLayout android:id="@+id/reward_list_tree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/reward_list_item_index">
        
        <View android:id="@+id/reward_list_tree_branch"
              android:layout_width="90dp"
              android:layout_height="12dp"
              android:layout_marginTop="21dp"/>
        
        <View android:id="@+id/reward_list_tree_trunk"
              android:layout_width="10dp"
              android:layout_height="60dp"/>
    
        <View android:id="@+id/reward_list_tree_ball"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginLeft="88dp"
              android:layout_marginTop="15dp"/>
        
    </RelativeLayout>
                
    <View android:id="@+id/reward_list_fruit_branch"
          android:layout_width="40dp"
          android:layout_height="1dp"
          android:layout_marginTop="27dp"
          android:background="@color/my_green"
          android:layout_toRightOf="@+id/reward_list_tree"/>
    
    <View android:id="@+id/reward_list_fruit_ball"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@drawable/bg_oval_green"
          android:clickable="true"
          android:focusable="true"
          android:layout_toRightOf="@+id/reward_list_fruit_branch"
          android:layout_marginTop="15dp"/>
    
    <TextView android:id="@+id/reward_list_fruit_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/reward_list_fruit_ball"
              android:layout_marginLeft="3dp"
              android:layout_marginTop="17dp"/>
         
</RelativeLayout>
                