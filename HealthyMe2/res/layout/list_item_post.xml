<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp">
    
    <LinearLayout android:id="@+id/list_item_post_area2"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
            <ImageView android:id="@+id/list_item_post_image1"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:src="@drawable/ic_user_icon_test"
                       android:contentDescription=""
                       android:layout_marginRight="10dp"/>
    
            <TextView android:id="@+id/list_item_post_text1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:width="0dip"/>
        
        </LinearLayout>
        
        <RelativeLayout  android:layout_width="match_parent"
                         android:layout_height="wrap_content">
            
            <TextView android:id="@+id/list_item_post_text3"
                      android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:textSize="10sp"
                      android:layout_alignParentRight="true"
                      android:gravity="bottom"/>
            
            <TextView android:id="@+id/list_item_post_text4"
                      android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:textSize="8sp"
                      android:layout_toLeftOf="@+id/list_item_post_text3"
                      android:text="(0)"
                      android:layout_marginRight="20dp"
                      android:gravity="bottom"/>
            
            <ImageView android:id="@+id/list_item_post_image2"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_reply"
                       android:contentDescription=""
                       android:layout_toLeftOf="@+id/list_item_post_text4"/>
        
        </RelativeLayout>
        
    </LinearLayout>
    
    
    <LinearLayout android:id="@+id/list_item_post_area1"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        
    </LinearLayout>
    
    <LinearLayout android:id="@+id/list_item_post_area3"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp">
        
    </LinearLayout>
    
</LinearLayout>